  </div>

  <div class="form-group row col-sm-4">
    <%= form.label "Estado" %>    
    <% opciones = options_from_collection_for_select(@estados, "id","valor",@usuario.idestadousuario) %>
    <%= form.select(:idestadousuario, opciones,{},{class:"form-control"}) %> 
